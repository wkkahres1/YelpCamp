<%- include ("../partials/header") %>

<div class = "container">
	<div class = "row">
	
		<h1 style = "text-align: center;">Update <%=campground.name%> information.</h1>
		<div style = "width: 30%; margin: 25px auto;">
			<form action ="/campgrounds/<%=campground._id%>?_method=PUT" method = "POST">
				<div class = "form-group">
				<!-- form-group groups things together and gives a little space in between -->
					<input type="text" class = "form-control" value="<%=campground.name%>" name = "campground[name]">
				</div>
				<div class = "form-group">
					<input type="number" class = "form-control" value="<%= campground.price %>" name = "campground[price]" min="0.01" step="0.01"> <!-- this is to create step inpute for price -->
				</div>
				<div class = "form-group">
					<input type="text" class = "form-control" value="<%=campground.img%>" name = "campground[img]">
				</div>
				<div class = "form-group">
					<input type="text" class = "form-control" value="<%=campground.description%>" name = "campground[description]">
				</div>
				<div class = "form-group">
					<button class ="btn btn-lg btn-primary btn-block">Submit!</button>
					<!--btn-block makes button take up entire line -->
				</div>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
	</div>
</div>

<%- include ("../partials/footer") %>