<%- include ("../partials/header") %>

<div class = "container">
	<div class = "row">
	
		<h1 style = "text-align: center;"> Create a New Campground </h1>
		<div style = "width: 30%; margin: 25px auto;">
			<form action ="/campgrounds" method = "POST">
				<div class = "form-group">
				<!-- form-group groups things together and gives a little space in between -->
					<input type="text" class = "form-control" placeholder="name" name = "name">
				</div>
				<div class = "form-group">
					<input type="number" class = "form-control" placeholder="price" name = "price" min="0.01" step="0.01"> <!-- this is to create step inpute for price -->
				</div>
				<div class = "form-group">
					<input type="text" class = "form-control" placeholder="image url" name = "image">
				</div>
				<div class = "form-group">
					<input type="text" class = "form-control" placeholder="description" name = "description">
				</div>
				<div class = "form-group">
					<button class ="btn btn-lg btn-primary btn-block">Submit!</button>
					<!--btn-block makes button take up entire line -->
				</div>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
	</div>
</div>

<%- include ("../partials/footer") %>