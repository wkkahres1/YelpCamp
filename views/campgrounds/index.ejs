<%- include ("../partials/header") %>

<div class = "container">
	
	<header class="jumbotron">
		<div class = "container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world.</p>
			<p>
				<a class = "btn btn-primary btn-lg" href = "campgrounds/new">Add New Campground</a>
			</p>
		</div>
	</header>

	<div class = "row">
		<div class = "col-lg-12">
			<h3> Our Most Popular Campgrounds!</h3>
		</div>
	</div>
	
	<div class = "row text-center" style="display:flex; flex-wrap: wrap"> 
	<!--will be added to external css -->
	<!--the css will make the grid more flexible, in case there are different heights -->
		<%  campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 col-sm-6"> <!--12 units 3/4 and small 6/12 and xs 12-->
				<div class ="thumbnail"> <!-- creates cards-->
					<img src = "<%=campground.img %>">	
					<div class = "caption">
						<h4> <%=campground.name %></h4>	
					</div>
					<p>
						<a href = "/campgrounds/<%= campground._id %>" class ="btn btn-primary">More Info</a>
						<!--campground._id refers to the id in the camground object in the database-->
					</p>
				</div>
			</div>
		<% }) %>				
	</div> <!--row-->
</div> <!--container -->
	
<%- include ("../partials/footer") %> 